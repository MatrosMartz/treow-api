{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "prettier"],
	"plugins": ["prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": ["./tsconfig.json"]
	},
	"rules": {
		"prettier/prettier": "error",
		"@typescript-eslint/no-non-null-assertion": "off",
		"@typescript-eslint/no-namespace": ["error", { "allowDeclarations": true }]
	}
}
